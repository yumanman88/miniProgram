@import '../common/css/flexible.styl'

$lightFontColor = rgb(152, 152, 152)
$yellowColor    = rgb(243, 124, 66)
$greyColor      = rgb(152, 152, 152)
$bgColor        = rgb(238, 238, 238)


.Item-Detail
    p
        letter-spacing px2rem(1px)
    .items
        width px2rem(690px)
        font-size px2rem(28px)
        padding px2rem(30px) px2rem(30px)
        border-bottom 7px solid $bgColor
        .items-img
            height px2rem(382px)
            width px2rem(690px)
            background-image url('./img/test.png')
            background-size px2rem(690px) px2rem(382px)
            border 0
        .tags-times
            margin px2rem(20px) 0
            font-size px2rem(28px)
            display: flex
            flex-direction row
            justify-content space-between
            color $lightFontColor
        .short-desc
            font-size px2rem(30px)
        .price
            margin px2rem(20px) 0 px2rem(30px) 0
            #now-price
                font-size px2rem(36px)
                margin-right px2rem(20px)
                color: rgb(235, 19, 19)
            #origin-price
                font-size px2rem(28px)
                text-decoration: line-through
                color $lightFontColor
        .desc
            font-size px2rem(30px)
            line-height px2rem(50px)

    .users-wrap
        height px2rem(300px)
        padding px2rem(20px) px2rem(30px)
        border-bottom 7px solid $bgColor
        .users
            height px2rem(110px)
            display inline-flex
            flex-direction row
            justify-content flex-start
            .avatar
                height px2rem(110px)
                width px2rem(110px)
                border-radius 50%
                // background-image url("./img/avatar.png")
                background-size px2rem(110px) px2rem(110px)
            .users-info
                margin-left px2rem(10px)
                font-size px2rem(32px)
                display flex
                flex-direction column
                justify-content center
                .name
                    font-weight bold
                    font-size px2rem(32px)
                    margin-bottom px2rem(15px)
                .intimacy
                    font-size px2rem(30px)
                    .love-icon
                        display inline-block
                        height px2rem(35px)
                        width px2rem(35px)
                        margin-left px2rem(20px)
                        vertical-align sub
                        background-image url("./img/love-icon.png")
                        background-size px2rem(35px) px2rem(35px)

        .relate-info
            font-size px2rem(30px)
            p
                font-size px2rem(30px)
                line-height px2rem(30px)
                margin px2rem(20px) 0
                display flex
                flex-direction row
                justify-content flex-start
                .star
                    margin px2rem(2px)
                    height px2rem(30px)
                    width px2rem(30px)
                    background-image url("./img/collect.png")
                    background-size px2rem(30px) px2rem(30px)
    .message-board
        padding px2rem(30px)
        .top
            margin-bottom px2rem(30px)
            border-left 5px solid $yellowColor
            font-size px2rem(30px)
            font-weight bold
            padding-left px2rem(20px)
