@import '../../common/css/flexible.styl'

$lightFontColor = rgb(152, 152, 152)
$yellowColor    = rgb(243, 124, 66)
$greyColor      = rgb(152, 152, 152)
$bgColor        = rgb(238, 238, 238)




.Collect-Item-Wrap
    p
        letter-spacing px2rem(1px)

    button
        outline none
        display inline-block
        padding 0
        margin 0

    border-bottom 1px solid $bgColor
    padding 0
    display inline-flex
    flex-direction row
    width 100%
    .item
        width 100%
        display flex
        margin px2rem(20px) 0 px2rem(30px) px2rem(30px)
        flex-direction row
        justify-content flex-start
        .img
            width px2rem(222px)
            height px2rem(222px)
            background-size px2rem(222px) px2rem(222px)
        .info-wrap
            width 65%
            display flex
            flex-direction column
            justify-content flex-start
            padding 0 px2rem(30px) 0 px2rem(20px)
            .user-wrap
                display inline-flex
                flex-direction row
                justify-content space-between
                height px2rem(80px)
                .user-info
                    display inline-flex
                    flex-direction row
                    justify-content flex-end
                    align-items center
                    // height px2rem(80px)
                    .avatar
                        background-image url('../img/avatar.png')
                        height px2rem(66px)
                        width px2rem(66px)
                        background-size px2rem(66px) px2rem(66px)
                    .name
                        margin-left px2rem(20px)
                        font-size px2rem(32px)
                .intimacy
                    display inline-flex
                    flex-direction row
                    justify-content flex-end
                    align-items center
                    font-size px2rem(30px)
                    .img
                        display inline-block
                        background-image url('../img/love-icon.png')
                        height px2rem(30px)
                        width px2rem(30px)
                        background-size px2rem(30px) px2rem(30px)
                        margin-right px2rem(10px)

            .detail
                font-size px2rem(30px)
                margin-bottom px2rem(20px)
                word-break break-all
            .tags
                color $lightFontColor
                margin-bottom px2rem(20px)
                font-size px2rem(28px)
                .delete
                    float right
                    height px2rem(40px)
                    width px2rem(40px)
                    background-image url('../img/delete.png')
                    background-size px2rem(40px) px2rem(40px)
                    margin-right px2rem(20px)
            .price-wrap
                display flex
                flex-direction row
                justify-content space-between
                align-items flex-end
                .price
                    color $yellowColor
                    font-size px2rem(36px)
                .time
                    color $lightFontColor
                    font-size px2rem(24px)
                    margin-right px2rem(20px)
